<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Mandarin voice recognition isn't particularly accurate, partially due to various regional accents. English words are also not recognized properly when the system language is set to Simplified Chinese. Use a broad array with words that are likely to be the outcome in order to mitigate this. -->
    <string-array name="pref_camera_voiceshutter_triggerwords">
        <item>cid</item>
        <item>civ</item>
        <item>甜</item>
        <item>天</item>
        <item>cheese</item>
        <item>氣</item>
    </string-array>
</resources>
