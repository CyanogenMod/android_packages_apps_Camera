<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>
	<!-- set this to true if the device doesn't have a GPU, or an EGL
	     library is for some reason unavailable -->
	<bool name="softwareGLOnly">false</bool>

        <!-- Autofocus parameters -->
        <string name="touchFocusParameter"></string>
        <bool name="touchFocusNeedsRect">false</bool>

	<!-- FFC parameter filtering -->
	<bool name="ffc_canFocus">true</bool>
	<bool name="ffc_canZoom">true</bool>
	<string name="ffc_supportedEffects"></string>

	<!-- Resolution filtering -->
	<string name="filtered_pictureSizes"></string>

	<!-- Wide media profile available -->
	<bool name="supportsWideProfile">false</bool>

	<!-- High Framerate 1080p for Nvidia Cameras -->
	<bool name="supportsNvHighBitrateFullHD">false</bool>

	<!-- Samsung Camcorder Mode -->
	<bool name="needsSamsungCamMode">false</bool>

	<!-- Samsung Continuous Autofocus -->
	<bool name="needsSamsungContinuousAf">false</bool>

	<!-- Samsung Special Settings -->
	<bool name="needsSamsungSpecialSettings">false</bool>

	<!-- is OMAP4 camera -->
	<bool name="isOMAP4Camera">false</bool>

    <!-- Autofocus on camcorder start -->
    <bool name="focusCamcorderAtStart">true</bool>
</resources>
